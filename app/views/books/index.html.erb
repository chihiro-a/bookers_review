<h1>Books</h1>
<table>
    <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    <tr>
        <% @books.each do |book| %>
        <td><%= book.title%></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "edit" ,edit_book_path(book.id) %></td>
        <td></td>
        <% end %>
    </tr>
</table>
<h1>New Book</h1>
<%= form_with model:@book, local:true do |f| %>
    <p>Title</p>
    <%= f.text_field:title %>
    <p>Body</p>
    <%= f.text_field:body %>
    <div>
        <%= f.submit "Create book" %>
    </div>
<% end %>